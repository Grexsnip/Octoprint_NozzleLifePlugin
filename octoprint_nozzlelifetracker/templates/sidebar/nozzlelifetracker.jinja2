<div id="sidebar_plugin_nozzlelifetracker" class="nozzlelifetracker sidebar-section">
  <div style="font-size:11px; opacity:0.7; margin-bottom:8px;">
    <strong>NLT Settings:</strong>
    <span data-bind="text: displayModeSetting"></span>,
    Nozzles: <span data-bind="text: (nozzles() && nozzles().length) || 0"></span>
  </div>
  <table class="table table-condensed">
    <thead>
      <tr><th>Name</th><th>Retired?</th></tr>
    </thead>
    <tbody data-bind="foreach: nozzles">
      <tr>
        <td data-bind="text: name || id"></td>
        <td data-bind="text: retired ? 'Yes' : 'No'"></td>
      </tr>
    </tbody>
  </table>
  <div data-bind="visible: hasData">
    <strong data-bind="text: nozzleName"></strong><br/>
    <span data-bind="text: runtimeText"></span><br/>

    <!-- Status Indicator -->
    <div data-bind="if: displayMode() === 'circle' || displayMode() === 'both'">
      <span class="status-indicator" data-bind="style: { backgroundColor: statusColor }"></span>
    </div>

    <div data-bind="if: displayMode() === 'bar' || displayMode() === 'both'">
      <div class="progress">
        <div class="progress-bar" role="progressbar"
             data-bind="style: { width: progressPercent }, css: progressBarClass"></div>
      </div>
    </div>
  </div>

  <div data-bind="visible: !hasData()">
    <em>No nozzle selected</em>
  </div>
</div>





